{
    "ts-node": {
      "require": [
        "tsconfig-paths/register"
      ]
    },
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ES6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "strict": true,
      "sourceMap": false,
      "outDir": "dist",
      "baseUrl": "src",
      "paths": {
        "@/*": [
          "./*"
        ],
      },
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  